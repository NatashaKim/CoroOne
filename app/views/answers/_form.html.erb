<%= form_for([@post, @post.answers.build]) do |f| %>
  <div class="field">
    <%= f.label :option %><br />
    <%= f.text_area :option %>
  </div>
  <div class="field">
    <%= f.label :correctness %><br />
    <%= f.check_box :correctness %></h3>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
