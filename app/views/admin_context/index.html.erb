<%= render 'navbar/navbarleft' %>

<body>

  <div class="wrapper_posts">

      <div class="new_post_link">
        <%= link_to 'Создать пост', new_post_path %>
      </div>

      <table>
        <thead>
          <tr>
             <th>Title</th>
             <th>Author</th>
             <th>Category</th>
             <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>

        <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.title, post %></td>
            <td class="author"><span><%= post.author %></span></td>
            <td class="category.name"><span><%= post.category.name %></span></td>
            <td><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></td>
            <td><%= post.comments.count %> <%= (post.comments.count) == 1 ? 'Comment' : 'Commentes'%></td>
            <td><%= link_to 'Редактировать', edit_post_path(post) %></td>
            <td><%= link_to 'Удалить', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>


          <% end %>
        </tbody>
      </table>

    </div>

    <br>

    <div class="wrapper_categories">
      <%= link_to 'Создать категорию', new_category_path %>
    </div>


    <div class="wrapper_user">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Username</th>
            <% if user_signed_in? && current_user.admin == true %>
              <td>Admin</td>
            <% end %>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.email, user %></td>
              <td><%= user.username %></td>
              <% if user_signed_in? && current_user.admin == true %>
              <td><%= user.admin %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>







