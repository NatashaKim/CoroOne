<body class="show_body">
  <%= render 'navbar/navbarinner' %>
  <div class="wrapper_show">

    <p>
      <strong></strong>
      <%= @post.name %>
    </p>

<% if @post.category_id? %>
    <p>
      <strong>Category:</strong>
      <%= @post.category.name %>
    </p>
<% end %>
    <p>
      <strong></strong>
      <%= @post.title %>
    </p>

    <%= image_tag(@post.image.url, alt: 'Image') if @post.image? %>

     <div class="narrow">

      <p>
        <strong></strong>
        <%= @post.content.html_safe %>
      </p>

      <p><%= @post.likes.count %> <%= (@post.likes.count) == 1 ? 'Like' : 'Likes'%></p>
      <p><%= @post.favorites.count %> <%= (@post.favorites.count) == 1 ? 'Favorite' : 'Favorites'%></p>

      <p>
      	<strong></strong>
      	<%= @post.user_id %>
      </p>

      <% pre_like = @post.likes.find { |like| like.user_id == current_user.id} %>
      <% if user_signed_in? %>

        <% if pre_like %>
          <%= button_to 'Unlike', post_like_path(@post, pre_like), method: :delete %>
        <% else %>
          <%= button_to 'Like', post_likes_path(@post), method: :post %>
        <% end %>

        <% pre_favorite = @post.favorites.find { |favorite| favorite.user_id == current_user.id} %>
        <% if pre_favorite %>
            <%= button_to 'Remove from Favorite', post_favorite_path(@post, pre_favorite), method: :delete %>
        <% else %>
            <%= button_to 'Add to Favorite', post_favorites_path(@post), method: :post %>
        <% end %>
      <% end %>

      <h2>Комментарии</h2>
      <%= render @post.comments %>

      <h2>Добавить комментарий:</h2>
      <% if user_signed_in? %>
        <%= render "comments/form" %>
      <% else %>
        <p>Please <%= link_to 'login', new_user_session_path %> or <%= link_to 'register', new_user_registration_path %> to comment.</p>
      <% end %>

      <h2>Comments</h2>
        <%= render @post.answers %>

      <% if user_signed_in? %>
      <%= link_to 'Редактировать', edit_post_path(@post) %> |
      <% end %>
      <%= link_to 'Назад', admin_context_path %>
    </div>
  </div>
  <%= render 'footer/footerinner' %>
</body>
