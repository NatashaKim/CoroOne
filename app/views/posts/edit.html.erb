<body class="edit_post">
  <%= render 'navbar/navbarleft' %>
   <div class="edit_post_wrapper">
     <div class="edit_post_card">
      <h1>Редактирование поста</h1>

    <% if @post.post_type.name == "news" %>
        <%= render 'form', post: @post %>
      <% elsif @post.post_type.name == "portfolio" %>
            <%= render 'formportfolio', post: @post %>
      <% elsif @post.post_type.name == "reviews" %>
            <%= render 'form', post: @post %>
      <% elsif @post.post_type.name == "articles" %>
            <%= render 'form', post: @post %>
      <% elsif @post.post_type.name == "events" %>
            <%= render 'formevents', post: @post %>
      <% elsif @post.post_type.name == "necrology" %>
            <%= render 'formnecrology', post: @post %>
      <% else %>
        <%= render 'form', post: @post %>
        <% if @post.id? %>
            <h2>Добавить ответ:</h2>
              <%= render "answers/form" %>
        <% end %>
    <% end %>



      <%= link_to 'Открыть', @post %> |
      <%= link_to 'Назад', admin_context_path(curatorposts: "") %>
    </div>
  </div>
</body>
