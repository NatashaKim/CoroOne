<div class="Spider_section">
  <%= react_component 'M_post_types_nav', { post_types: @post_types } %>
  <% spider_post = @posts[0] %>
  <% news_banner = @posts[1] %>
  <% articles_banner = @posts[2] %>
  <% reviews_banner = @posts[3] %>
