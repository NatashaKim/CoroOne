<body class="posts">
  <%= render 'navbar/navbarinner' %>
  <div class="wrapper_posts">

    <%= image_tag("news.svg", :alt => "Новости") %>
    <h2>All Categories</h2>
    <% Category.all.each do |cat| %>
    	<%= link_to cat.name, posts_path(category: cat.name) %> <br>
    <% end %>
    <br>


    <%= react_component 'M_checkbox'%>
    <%= react_component 'M_post_types_nav', { post_types: @post_types, post_type: @post_type } %>
    <%= react_component 'M_categories_nav', { categories: @categories } %>
    <%= react_component 'O_posts_preview', { post_type_id: 1 } %>

    <div class="main_section">
      <div class="table_hidden">
          <!-- <span>Name</span> -->
          <span>Category</span>
          <span>Title</span>
          <span>Author</span>
          <span>Content</span>
      </div>

    </div>

    <br>

    <div class="new_post_link">
      <%= link_to 'Создать пост', new_post_path %>
      <%= link_to 'New Category', new_category_path %>
    </div>

  </div>
  <%= render 'footer/footerinner' %>
</body>
