      <%= react_component 'O_reviews_preview', { post_type_id: 4, post_number: 11 } %>
    </div>

    <%= react_component 'M_post_preview', { post: reviews_banner, category: @posts[2]["category"], postStyle: 'ps--screen' } %>

    <div class="Necrology">
