<% @action = "/posts/"%>
  <%if @post.id%>
    <%if @post.id > 0%>
      <% @action = @action + @post.id.to_s %>
    <% end %>
  <% end %>

<form enctype="multipart/form-data" action=<%= @action %> accept-charset="UTF-8" method="post">
  <%= react_component 'O_necrologyform',  { post: @post, genres: @genres, active_genres: @post_genres} %>

</form>
